<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.pokemmoencountercounter">

    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_pokemmoencountercountericon"
        android:label="@string/app_name"
        android:roundIcon="@drawable/ic_pokemmoencountercountericon"
        android:supportsRtl="true"
        android:theme="@style/Theme.PokeMMOEncounterCounter">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <service
            android:name=".FloatingViewService"
            android:enabled="true"
            android:exported="false" />
    </application>

</manifest>